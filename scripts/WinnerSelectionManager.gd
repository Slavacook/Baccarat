func _set_marker_state(winner: String, pressed: bool) -> void:
	"""–£—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –≤–∏–∑—É–∞–ª—å–Ω–æ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ –º–∞—Ä–∫–µ—Ä–∞ (–Ω–∞–∂–∞—Ç/–Ω–µ –Ω–∞–∂–∞—Ç)

	–ú–µ–Ω—è–µ—Ç —Ç–µ–∫—Å—Ç—É—Ä—É –º–∞—Ä–∫–µ—Ä–∞ –Ω–∞ "–∞–∫—Ç–∏–≤–Ω—É—é" –≤–µ—Ä—Å–∏—é –ø—Ä–∏ –≤—ã–±–æ—Ä–µ
	"""
	var marker = marker_nodes[winner]

	if pressed:
		# –ê–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω–Ω—ã–π –º–∞—Ä–∫–µ—Ä ‚Üí –ø–æ–∫–∞–∑—ã–≤–∞–µ–º "wins" —Ç–µ–∫—Å—Ç—É—Ä—É
		var active_texture_path = MARKER_TEXTURES[winner]["active"]
		var texture = load(active_texture_path)
		if texture:
			marker.texture_normal = texture
			print("üéØ –ú–∞—Ä–∫–µ—Ä %s –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω (—Ç–µ–∫—Å—Ç—É—Ä–∞: %s)" % [winner, active_texture_path.get_file()])
		else:
			push_error("WinnerSelectionManager: –Ω–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å —Ç–µ–∫—Å—Ç—É—Ä—É %s" % active_texture_path)
	else:
		# –û–±—ã—á–Ω–æ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ ‚Üí –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –æ–±—ã—á–Ω—É—é —Ç–µ–∫—Å—Ç—É—Ä—É
		var normal_texture_path = MARKER_TEXTURES[winner]["normal"]
		var texture = load(normal_texture_path)
		if texture:
			marker.texture_normal = texture
			print("üéØ –ú–∞—Ä–∫–µ—Ä %s –¥–µ–∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω (—Ç–µ–∫—Å—Ç—É—Ä–∞: %s)" % [winner, normal_texture_path.get_file()])
		else:
			push_error("WinnerSelectionManager: –Ω–µ —É–¥–∞–ª–æ—Å—å –∑–∞–≥—Ä—É–∑–∏—Ç—å —Ç–µ–∫—Å—Ç—É—Ä—É %s" % normal_texture_path)
